# ===========================================
# MKLanguage Environment Variables
# ===========================================
# Copy this file to .env.local and fill in values

# Database (Required)
DATABASE_URL=

# Authentication (Required)
NEXTAUTH_SECRET=
NEXTAUTH_URL=

# Site URL (Required for production)
NEXT_PUBLIC_SITE_URL=

# Google Cloud Translation API (Optional)
GOOGLE_PROJECT_ID=
GOOGLE_APPLICATION_CREDENTIALS_JSON=

# OpenAI API - Tutor Feature (Optional)
OPENAI_API_KEY=

# Upstash Redis - Rate Limiting (Optional)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Sentry Error Tracking (Optional)
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=
SENTRY_ORG=
SENTRY_PROJECT=

# Instagram Integration (Optional)
INSTAGRAM_ACCESS_TOKEN=
INSTAGRAM_BUSINESS_ACCOUNT_ID=

# Resend Email Service (Optional)
RESEND_API_KEY=
RESEND_FROM_EMAIL=

# Expo Mobile App (Optional)
EXPO_PUBLIC_API_BASE_URL=
EXPO_PUBLIC_PROJECT_ID=

# E2E Testing (Optional)
AUDIT_BASE_URL=
AUDIT_EMAIL=
AUDIT_PASSWORD=

# News API Offload (Optional)
# Use these to point the app at a Cloudflare Worker or external proxy.
NEWS_API_URL=
NEXT_PUBLIC_NEWS_API_URL=
NEWS_IMAGE_PROXY_URL=
NEXT_PUBLIC_NEWS_IMAGE_PROXY_URL=

# Feature Flags (Optional)
NEXT_PUBLIC_ENABLE_DEV_PAGES=false
