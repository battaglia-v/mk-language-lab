{
  "name": "mk-language-lab",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:webpack": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --max-warnings 10",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "postinstall": "prisma generate",
    "prisma:seed": "tsx prisma/seed.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:dev": "E2E_DEV_MODE=true playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "E2E_DEV_MODE=true playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:fast": "playwright test --workers=4",
    "prepare": "husky",
    "practice-audio:sync": "tsx scripts/practice-audio-sync.ts",
    "agents:launch": "tsx scripts/launch-sub-agents.ts",
    "agents:orchestrate": "tsx scripts/orchestrate-agents.ts",
    "agents:create-issues": "tsx scripts/create-agent-issues.ts",
    "i18n:check": "tsx scripts/sync-translations.ts --ci",
    "i18n:report": "tsx scripts/sync-translations.ts",
    "i18n:fix": "tsx scripts/sync-translations.ts --fix",
    "check:i18n": "tsx scripts/check-i18n-keys.ts",
    "check:i18n-rendered": "tsx scripts/check-i18n-rendered.ts",
    "check:i18n-rendered:ci": "tsx scripts/check-i18n-rendered.ts --ci",
    "test:e2e:mobile": "playwright test --project=mobile-320 --project=mobile-360 --project=mobile-390",
    "test:mobile-audit": "playwright test e2e/mobile-audit-comprehensive.spec.ts --project=chromium --workers=1",
    "audit:mobile": "playwright test --project=mobile-audit --reporter=json --reporter=html > test-results/audit-results.json",
    "audit:mobile:headed": "playwright test --project=mobile-audit --headed",
    "audit:mobile:ui": "playwright test --project=mobile-audit --ui",
    "audit:stage4": "playwright test tests/mobile-audit/14-stage4-gate.spec.ts --project=mobile-audit --workers=1 --retries=1 --grep-invert @slow",
    "audit:mobile:md": "node scripts/generate-mobile-audit-md.mjs",
    "audit:mobile:full": "npm run audit:mobile && npm run audit:mobile:md",
    "release-gate": "node scripts/run-release-gate.mjs",
    "content:validate": "tsx scripts/validate-content.ts",
    "content:validate:ci": "tsx scripts/validate-content.ts --ci",
    "content:validate:strict": "tsx scripts/validate-content.ts --strict"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.11.1",
    "@aws-sdk/client-s3": "^3.931.0",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@ducanh2912/next-pwa": "^10.2.9",
    "@google-cloud/text-to-speech": "^6.4.0",
    "@google-cloud/translate": "^9.2.1",
    "@prisma/client": "^6.19.0",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@sentry/nextjs": "^10.23.0",
    "@tamagui/colors": "^1.137.1",
    "@tamagui/config": "^1.138.6",
    "@tamagui/portal": "^1.138.6",
    "@tamagui/select": "^1.138.6",
    "@tamagui/separator": "^1.138.6",
    "@tamagui/shapes": "^1.138.6",
    "@tamagui/sheet": "^1.138.6",
    "@tamagui/slider": "^1.138.6",
    "@tamagui/switch": "^1.138.6",
    "@tamagui/tabs": "^1.138.6",
    "@tamagui/text": "^1.138.6",
    "@tamagui/themes": "^1.137.1",
    "@tamagui/toggle-group": "^1.138.6",
    "@tanstack/react-query": "^5.62.0",
    "@types/papaparse": "^5.5.0",
    "@upstash/ratelimit": "^2.0.7",
    "@upstash/redis": "^1.35.6",
    "@vercel/analytics": "^1.5.0",
    "@vercel/blob": "^0.25.1",
    "bcryptjs": "^3.0.3",
    "canvas-confetti": "^1.9.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.25",
    "googleapis": "^165.0.0",
    "lucide-react": "^0.553.0",
    "next": "^16.0.10",
    "next-auth": "^5.0.0-beta.30",
    "next-intl": "^4.5.7",
    "next-themes": "^0.4.6",
    "openai": "^6.7.0",
    "papaparse": "^5.5.3",
    "pdf-parse": "^2.4.5",
    "pg": "^8.16.3",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "resend": "^6.5.2",
    "swr": "^2.3.6",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/canvas-confetti": "^1.9.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/coverage-v8": "^4.0.0",
    "eslint": "^9.0.0",
    "eslint-config-next": "16.0.10",
    "husky": "^9.1.7",
    "jsdom": "^27.0.1",
    "lint-staged": "^16.2.6",
    "msw": "^2.11.5",
    "prisma": "^6.19.0",
    "tailwindcss": "^4",
    "tsx": "^4.20.6",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "vitest": "^4.0.0"
  },
  "overrides": {
    "tar": "7.5.2"
  }
}
