  "text_blocks_mk": [
    { "type": "p", "value": "Марија влегува во кафуле. Таа седнува на маса." },
    { "type": "p", "value": "— Добар ден! Што сакате? — прашува келнерот." },
    { "type": "p", "value": "— Добар ден! Јас сакам едно кафе, молам." },
    { "type": "p", "value": "— Со млеко или без млеко?" },
    { "type": "p", "value": "— Со малку млеко, молам." },
    { "type": "p", "value": "— Дали сакате нешто за јадење?" },
    { "type": "p", "value": "— Да, еден кроасан, молам." },
    { "type": "p", "value": "— Во ред. Веднаш!" },
    { "type": "p", "value": "Марија чека. По пет минути, келнерот доаѓа." },
    { "type": "p", "value": "— Повелете! Кафе и кроасан." },
    { "type": "p", "value": "— Благодарам многу!" },
    { "type": "p", "value": "— Молам. Пријатно!" }
  ],
  "grammar_highlights": [
