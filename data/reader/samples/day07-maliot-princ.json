  "text_blocks_mk": [
    { "type": "p", "value": "На планетата на момчето имало лоши растенија - баобаби. Нивните семиња биле скриени во земјата." },
    { "type": "p", "value": "„Ако не ги извадиш навреме," рече момчето, „ќе пораснат и ќе ја уништат планетата."" },
    { "type": "p", "value": "„Како?" прашав. „Нивните корени се многу силни. Ако баобабот порасне, неможеш да го извадиш."" },
    { "type": "p", "value": "„Затоа секое утро мора да ги бараш малите баобаби и да ги вадиш," рече тој сериозно." },
    { "type": "p", "value": "Тоа е тешка работа, но многу важна. Дисциплината е клучот." }
  ],
  "grammar_highlights": [
    {
      "title_mk": "Услов со 'ако'",
      "title_en": "Conditional with 'ако' (if)",
      "description_en": "Expressing conditions and consequences",
      "bullets": [
        "ако + present = future consequence (real condition)",
        "ако + past = past consequence (unreal condition)",
        "Can start or end the sentence"
      ],
      "examples": [
        { "mk": "Ако не ги извадиш, ќе пораснат.", "en": "If you don't pull them out, they will grow.", "note": "Real condition" },
