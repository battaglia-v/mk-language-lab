// StreakFreeze - Consumable items to protect streaks
model StreakFreeze {
  id        String    @id @default(cuid())
  userId    String
  earnedAt  DateTime  @default(now())
  usedAt    DateTime?
  expiresAt DateTime?
  source    String // 'purchase' | 'quest_reward' | 'achievement'

