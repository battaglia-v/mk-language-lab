// ContentStatus - workflow states for content items
enum ContentStatus {
  draft // Initial state, not visible to learners
  needs_review // Submitted for review
  approved // Approved by reviewer, ready for publish
  published // Live and visible to learners
}

// ContentEditLog - audit trail for content changes
model ContentEditLog {
  id             String   @id @default(cuid())
  contentType    String // 'curriculum_lesson' | 'practice_vocabulary' | 'word_of_the_day' | 'practice_audio'
  contentId      String // ID of the content item
  userId         String // User who made the edit
  action         String // 'create' | 'update' | 'status_change' | 'approve' | 'publish'
  changes        Json? // JSON diff of field changes
  previousStatus String? // Previous content status
  newStatus      String? // New content status
  notes          String?  @db.Text // Optional notes about the change
  createdAt      DateTime @default(now())

  @@index([contentType, contentId])
  @@index([userId])
  @@index([createdAt])
  @@index([action])
}
